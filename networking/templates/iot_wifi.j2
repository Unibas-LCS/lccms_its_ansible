[connection]
id={{ item.key }}
uuid={{ item.value.uuid | default(lookup('pipe', 'uuidgen')) }}
type=wifi
autoconnect={{ item.value.autoconnect | default(false) | ternary('true', 'false') }}
permissions=

[wifi]
mode=infrastructure
ssid={{ item.value.ssid }}

[wifi-security]
key-mgmt=wpa-psk
psk={{ item.value.psk }}

[ipv4]
method=auto

[ipv6]
addr-gen-mode=default
method=auto
